{% trans_default_domain 'FOSUserBundle' %}
<div class="page-top clearfix">
    <!--page main heading-->
    <div class="container">
        <h1 class="entry-title">Inscription</h1>
    </div>
</div>
<div class="contact-page clearfix animated fadeInLeft ae-animation-fadeInLeft">
    <div class="container">
        <!--contact form section-->
        <div class="blog-page-single clearfix">
            <article class="page type-page hentry  clearfix">
                <div class="full-width-contents">
                    <div class="entry-content">
                        <h2>Pas encore inscrit ?</h2>
                        <p>Nous vous invitons à vous inscrire afin de passer votre commande <br>et de rester en bonne santé. </p>
                    </div>
                </div>
            </article>
        </div>
        <div class="clearfix"></div>
        <!--contact form-->
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-6 ">
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register contact-form'}}) }}
                {{ form_widget(form) }}
                <div>
                    <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>