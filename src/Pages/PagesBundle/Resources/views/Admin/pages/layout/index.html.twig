{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('adminPages_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.titre }}</td>

                <td>
                            <a href="{{ path('adminPages_show', { 'id': page.id }) }}"><i class="icon-book"></i>lire</a>
                            <a href="{{ path('adminPages_edit', { 'id': page.id }) }}"><i class="icon-edit"></i>editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminPages_new') }}">Create a new page</a>
        </li>
    </ul>
{% endblock %}
