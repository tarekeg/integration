{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="page-top clearfix">
        <!--page main heading-->
        <div class="container">
            <h1 class="entry-title">Editer Adresse</h1>
        </div>
    </div>
        
    <div class="contact-page clearfix animated fadeInLeft ae-animation-fadeInLeft">
        <div class="container">
            <div class="clearfix"></div>
            <!--contact form-->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 ">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="Edit" class="button alt pull-right"/>
                    {{ form_end(edit_form) }}
                </div>
            </div>
            
            <a href="{{ path('utilisateursadresses_index') }}" class="button alt">Retour a la liste</a>
            <br><br>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
</div>

{% endblock %}
