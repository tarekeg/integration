{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="page-top clearfix">
        <!--page main heading-->
        <div class="container">
            <h1 class="entry-title">Adresses</h1>
        </div>
    </div>
    
    <div class="clearfix animated fadeInLeft ae-animation-fadeInLeft">
        <div class="col-lg-12 col-md-12 col-sm-12 ">
            <table  class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ utilisateursAdresses.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ utilisateursAdresses.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ utilisateursAdresses.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ utilisateursAdresses.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ utilisateursAdresses.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Cp</th>
                        <td>{{ utilisateursAdresses.cp }}</td>
                    </tr>
                    <tr>
                        <th>Pays</th>
                        <td>{{ utilisateursAdresses.pays }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ utilisateursAdresses.ville }}</td>
                    </tr>
                    <tr>
                        <th>Complement</th>
                        <td>{{ utilisateursAdresses.complement }}</td>
                    </tr>
                </tbody>
            </table>        
            <a href="{{ path('utilisateursadresses_index') }}" class="button alt">Retour a la liste</a>
            <a href="{{ path('utilisateursadresses_edit', { 'id': utilisateursAdresses.id }) }}" class="button alt pull-right">Editer</a>
            <br><br>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
