categories_index:
    path:     /
    defaults: { _controller: "EcommerceBundle:Categories:index" }
    methods:  GET

categories_show:
    path:     /{id}/show
    defaults: { _controller: "EcommerceBundle:Categories:show" }
    methods:  GET

categories_new:
    path:     /new
    defaults: { _controller: "EcommerceBundle:Categories:new" }
    methods:  [GET, POST]

categories_edit:
    path:     /{id}/edit
    defaults: { _controller: "EcommerceBundle:Categories:edit" }
    methods:  [GET, POST]

categories_delete:
    path:     /{id}/delete
    defaults: { _controller: "EcommerceBundle:Categories:delete" }
    methods:  DELETE
